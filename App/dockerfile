FROM node:20-alpine AS builder
WORKDIR /app
COPY package*.json yarn.lock ./
RUN yarn install --frozen-lockfile
COPY . .
RUN yarn build

FROM node:20-alpine
RUN addgroup -g 2025 -S devops && \
    adduser -S devops_coder_1 -u 2001
WORKDIR /app
COPY --from=builder /app/build ./build
RUN npm install -g serve
RUN chown -R devops_coder_1:devops /app
USER devops_coder_1
EXPOSE 3000
CMD ["serve", "-s", "build", "-l", "3000"]